#!/bin/bash

theme="spacemacs"

if [ "$theme" == "monokai" ]; then
    # monokai
    default_background='#272822'
    default_foreground='#F8F8F2'
    highlight_background='#3C3D37'
    highlight_foreground='#66D9EF'
else
    # spacemacs
    default_background='#292b2e'   #bg1
    default_foreground='#bc6ec5'   #func
    highlight_background='#444155' #highlight
    highlight_foreground='#bc6ec5' #func
fi

i3-dmenu-desktop --dmenu="(cat ; (stest -flx $(echo $PATH | tr : ' ') | sort -u)) | dmenu -i -fn 'xft:Source Code Pro:pixelsize=20' -q -l 7 -h 24 -w 600 -x 660 -y 456 -dim 0.3 -nb '$default_background' -nf '$default_foreground' -sb '$highlight_background' -sf '$highlight_foreground'"
